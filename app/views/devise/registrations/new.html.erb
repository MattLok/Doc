<div class="large-12 columns">
  <div class="small-6 large-centered columns">
     <h2>Sign up</h2>



      <%= simple_form_for(resource, url: user_registration_path, method: :post) do |f| %>

          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :email %>
          <%= f.input :password %>
          <%= f.input :password_confirmation %>


        <%= f.button :submit %>
      <% end %>

      <%= render "devise/shared/links" %><br />
    </div>
  </div>
