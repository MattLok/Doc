<h3>Appointments</h3>
<h5>Upcoming</h5>
<% if @doctor.appointments.count == 0 %>
  <p>No upcoming appointments at this time</p>
<% elsif current_user.role =='practice_admin' %>
  <table class="full_width centered">
    <tr>
      <th>Date</th>
      <th>Patient</th>
    </tr>
  <% @doctor.appointments.upcoming.each do |appointment| %>
    <tr>
      <td><%= appointment.date.strftime("%b %d,%y") %></td>
      <td><%= appointment.patient_name %></td>
    </tr>
    <% end %>
  </table>
<% end %><br />

<h5>Past</h5>
<% if @doctor.appointments.past.count == 0 %>
  <p>No old appointment records</p>
<% elsif current_user.role =='practice_admin' %>
  <table class="full_width centered">
    <tr>
      <th>Date</th>
      <th>Patient</th>
    </tr>
  <% @doctor.appointments.past.each do |appointment| %>
    <tr>
      <td><%= appointment.date.strftime("%b %d,%y") %></td>
      <td><%= appointment.patient_name %></td>
    </tr>
    <% end %>
  </table>
<% end %>
