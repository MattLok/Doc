<div class="large-7 columns">
  <h3><%= "#{@practice.office_name} Doctors" %></h3>

    <% @doctors.each_slice(3) do |slice| %>

      <div class="row doc-divide">
        <% slice.each do |doc| %>
          <div class="large-4 columns">
            <p>Name: <%= doc.full_name %></p>
            <p>Email: <%= doc.email %></p>
            <p>Role: <%= doc.role %></p>
            <p><%= link_to 'Appointments', doctor_appointments_path(doc), remote: true %> </p>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="large-12 columns">
      <div id="doc-appoint-holder"></div>
    </div>
</div>
<div class="large-3 columns">
  <h5>Invite A Doc</h5>
  <%= link_to 'Email Invite', new_user_invitation_path %>



</div>
