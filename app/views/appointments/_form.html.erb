
<%= form_for [@practice,@appointment] do |f| %>


  <%= f.label :date %>
  <%= f.date_select :date, {:start_year => Time.now.year}, {:class =>"date-style large-4 columns"} %></br>
  <%= f.label :doctor %>
  <%= f.collection_select :user_id, @doctors, :id, :full_name, include_blank: true %></br>
  <%= f.label :patient %>
  <%= f.collection_select :prac_mem_id, @practice.practice_memberships, :id, :full_name,
    inlcude_blank: true %><br /><br/>


  <div class="row">
    <div class="small-8  small-centered columns">
    <%= f.submit :class =>'tiny button centered' %>
    </div>
  </div>


<% end %> 
